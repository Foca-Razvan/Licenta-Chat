<Window x:Class="Client.AddFriendWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Client"
        mc:Ignorable="d"
        Title="AddFriendWindow" Height="300" Width="300">
    <Grid Background="WhiteSmoke">
        <Button x:Name="buttonOk" Content="Ok" HorizontalAlignment="Left" Margin="56,213,0,0" VerticalAlignment="Top" Width="75" Click="buttonOk_Click" Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}" BorderThickness="1" BorderBrush="Black"/>
        <TextBox x:Name="textBoxUsername" HorizontalAlignment="Left" Height="23" Margin="10,170,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="272"/>
        <TextBlock x:Name="textBlockInformation" HorizontalAlignment="Left" Margin="10,42,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="272" Height="79"/>
        <Button x:Name="buttonCancel" Content="Cancel" HorizontalAlignment="Left" Margin="173,213,0,0" VerticalAlignment="Top" Width="75" Click="buttonCancel_Click" Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}" BorderThickness="1" BorderBrush="Black" Background="White"/>

    </Grid>
</Window>
