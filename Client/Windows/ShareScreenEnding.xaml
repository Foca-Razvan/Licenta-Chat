<Window x:Class="Client.Windows.ShareScreenEnding"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Client.Windows"
        mc:Ignorable="d"
        Title="ShareScreenEnding" Height="101.639" Width="353.279" Closing="Closing_Window">
    <Grid>
        <Button x:Name="button" Content="Close" HorizontalAlignment="Left" Margin="137,40,0,0" VerticalAlignment="Top" Width="75" Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}" BorderBrush="Black" BorderThickness="1" Click="button_Click"/>
        <TextBlock x:Name="textBlock" HorizontalAlignment="Left" Margin="10,10,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="325" Height="25"/>
        <Button x:Name="buttonPause" Content="Pause" HorizontalAlignment="Left" Margin="35,40,0,0" VerticalAlignment="Top" Width="75" Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}" BorderBrush="Black" BorderThickness="1" Click="buttonPause_Click"/>
        <Button x:Name="buttonResume" Content="Resume" HorizontalAlignment="Left" Margin="240,40,0,0" VerticalAlignment="Top" Width="75" Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}" BorderBrush="Black" BorderThickness="1" Click="buttonResume_Click"/>

    </Grid>
</Window>
